<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.adaatham.suthar.view.PhotoUploadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:title="Upload Document" />


        </com.google.android.material.appbar.AppBarLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPart1Profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select" />

                <TextView
                    android:id="@+id/tvPhoto1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/btnPart1Profile"
                    android:padding="10dp"
                    android:text="Passport size photograph of user"
                    android:textColor="@android:color/holo_blue_dark" />

                <TextView
                    android:id="@+id/tvPhoto1Path"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnPart1Profile"
                    android:layout_toStartOf="@+id/btnUploadPic1"
                    android:padding="5dp" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/ivPhoto1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/tvstatus1" />


                <TextView
                    android:id="@+id/tvstatus1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPhoto1Path"
                    android:padding="10dp"
                    android:textColor="@android:color/holo_green_light"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnUploadPic1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/btnPart1Profile"
                    android:text="Upload" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cvTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPart2Profile"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Select" />

                <TextView
                    android:id="@+id/tvPhoto2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/btnPart2Profile"
                    android:padding="10dp"
                    android:text="Passport size photograph of Nominee 1"
                    android:textColor="@android:color/holo_blue_dark" />

                <TextView
                    android:id="@+id/tvPhoto2Path"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnPart2Profile"
                    android:layout_toStartOf="@+id/btnUploadPic2"
                    android:padding="5dp" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/ivPhoto2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/tvstatus2" />

                <TextView
                    android:id="@+id/tvstatus2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPhoto2Path"
                    android:padding="10dp"
                    android:textColor="@android:color/holo_green_light"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnUploadPic2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/btnPart2Profile"
                    android:text="Upload" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cvThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPart3Profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Select" />

                <TextView
                    android:id="@+id/tvPhoto3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/btnPart3Profile"
                    android:padding="10dp"
                    android:text="Passport size photograph of Nominee 2"
                    android:textColor="@android:color/holo_blue_dark" />

                <TextView
                    android:id="@+id/tvPhoto3Path"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnPart3Profile"
                    android:layout_toStartOf="@+id/btnUploadPic3"
                    android:padding="5dp" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/ivPhoto3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/tvstatus3" />

                <TextView
                    android:id="@+id/tvstatus3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPhoto3Path"
                    android:padding="10dp"
                    android:textColor="@android:color/holo_green_light"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnUploadPic3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/btnPart3Profile"
                    android:text="Upload" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</ScrollView>

