<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:padding="10dp"
        android:id="@+id/tvMemberName"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tvCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingStart="10dp"
        android:layout_below="@+id/tvMemberName"
        android:id="@+id/tvMemberCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="10dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/tvCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:id="@+id/ivView"
        android:layout_below="@+id/tvMemberCode"
        android:padding="10dp"
        android:src="@drawable/ic_view_list_deep_purple_400_36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_alignParentEnd="true"
        android:id="@+id/ivEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMemberCode"
        android:layout_marginTop="-1dp"
        android:padding="10dp"
        android:src="@drawable/ic_mode_edit_green_500_36dp" />

    <ImageView
        android:layout_marginEnd="20dp"
        android:id="@+id/ivEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMemberCode"
        android:layout_marginTop="-1dp"
        android:layout_toStartOf="@+id/ivEdit"
        android:padding="10dp"
        android:src="@drawable/ic_people_yellow_800_36dp" />

</RelativeLayout>